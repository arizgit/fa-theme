{%- endcomment -%}
<style>
  {%- assign controls_color = section.blocks.first.settings.text_color -%}

  #shopify-section-{{ section.id }} {
    --slideshow-background: {{ section.blocks.first.settings.background_gradient | default: section.blocks.first.settings.background | default: section.settings.background_gradient | default: section.settings.background }};
    --slideshow-controls-background: {{ controls_background.rgb }};
    --slideshow-controls-color: {{ controls_color.rgb }};

    {%- if section.settings.allow_transparent_header -%}
      margin-block-start: calc(-1 * var(--header-height) * var(--section-is-first));
    {%- endif -%}

    {%- if section.settings.use_custom_padding -%}
    --section-padding-top: {{ section.settings.padding_top }}rem;
    --section-padding-bottom: {{ section.settings.padding_bottom }}rem;
    --section-padding-top-mobile: {{ section.settings.padding_top_mobile }}rem;
    --section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}rem;
    {%- endif -%}

    --hot-spot-background: {{ section.settings.hot_spot_dot_background.rgb }};
    --hot-spot-text-color: {{ section.settings.hot_spot_dot_text_color.rgb }};
  }

  #shopify-section-{{ section.id }} .content-over-media {
    overflow: visible; /* allows dot to show outside */
  }

  {%- if section.settings.full_width -%}
    @media screen and (min-width: 1000px) {
      #shopify-section-{{ section.id }} {
        --section-spacing-block: 0;
      }
    }
  {%- endif -%}

  {%- for block in section.blocks -%}
    #block-{{ block.id }} {
      {%- assign controls_color = block.settings.text_color -%}
      --slideshow-slide-background: {{ block.settings.background_gradient | default: block.settings.background | default: section.settings.background_gradient | default: section.settings.background }};
      --slideshow-slide-controls-background: {{ controls_background.rgb }};
      --slideshow-slide-controls-color: {{ controls_color.rgb }};
    }

    {%- for i in (1 .. 5) -%}
    {%- liquid
      assign position_horz = 'horizontal_position_' | append: i
      assign position_vert = 'vertical_position_' | append: i
      assign position_horz_mobile = 'horizontal_position_mobile_' | append: i
      assign position_vert_mobile = 'vertical_position_mobile_' | append: i
      assign title = 'title_' | append: i
      assign content = 'content_' | append: i

      if block.settings[title] == blank or block.settings[content] == blank
        continue
      endif
    -%}

    #block-{{ section.id }}-{{ block.id }}-{{ i }} {
      --hot-spot-horizontal-position: {% if block.settings.mobile_image != blank %}{{ block.settings[position_horz_mobile] }}{% else %}{{ block.settings[position_horz] }}{% endif %}%;
      --hot-spot-vertical-position: {% if block.settings.mobile_image != blank %}{{ block.settings[position_vert_mobile] }}{% else %}{{ block.settings[position_vert] }}{% endif %}%;
    }

    @media screen and (min-width: 700px) {
      #block-{{ section.id }}-{{ block.id }}-{{ i }} {
        --hot-spot-horizontal-position: {{ block.settings[position_horz] }}%;
        --hot-spot-vertical-position: {{ block.settings[position_vert] }}%;
      }
    }
    {%- endfor -%}
  {%- endfor -%}
</style>

{%- comment -%}
