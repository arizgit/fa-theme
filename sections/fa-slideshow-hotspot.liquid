LIQUID
------------------------------------------------------------------------------------------------------------------------
{%- endcomment -%}

{%- assign slideshow_id = 'slideshow-' | append: section.id -%}
{%- assign tab_labels = '' -%}

<x-slideshow data-control-type="tabs" class="slideshow {% unless section.settings.full_width %}slideshow--boxed{% if section.settings.use_custom_padding %} slideshow--space{% endif %}{% endunless %} {% if section.blocks.size > 1 %}slideshow--multiple-slides{% endif %}" {% if section.settings.allow_transparent_header %}allow-transparent-header{% endif %}>
  {%- unless section.settings.full_width -%}
    <span class="slideshow__slide-background"></span>
  {%- endunless -%}

  {%- assign tab_overlay_opacity = section.settings.tab_labeled_overlay_opacity | divided_by: 100.0 | append: ';' -%}
  {%- assign tab_overlay_css_vars = "--tab-labeled-overlay-opacity:" | append: tab_overlay_opacity -%}
  {%- if section.settings.tab_labeled_overlay != blank and section.settings.tab_labeled_overlay != 'rgba(0,0,0,0)' -%}
    {%- assign tab_overlay_css_vars = tab_overlay_css_vars | append: "--tab-labeled-overlay   :" | append: section.settings.tab_labeled_overlay.rgb |  append: ';' -%}
  {%- endif -%}
  {%- if section.settings.tab_labeled_text != blank and section.settings.tab_labeled_text != 'rgba(0,0,0,0)' -%}
    {%- assign tab_overlay_css_vars = tab_overlay_css_vars | append: "--tab-labeled-text:" | append: section.settings.tab_labeled_text.rgb |  append: ';' -%}
  {%- endif -%}
  {%- if section.settings.tab_labeled_active != blank and section.settings.tab_labeled_active != 'rgba(0,0,0,0)' -%}
    {%- assign tab_overlay_css_vars = tab_overlay_css_vars | append: "--tab-labeled-active:" | append: section.settings.tab_labeled_active.rgb |  append: ';' -%}
  {%- endif -%}
  {%- if section.settings.tab_labeled_arrow != blank and section.settings.tab_labeled_arrow != 'rgba(0,0,0,0)' -%}
    {%- assign tab_overlay_css_vars = tab_overlay_css_vars | append: "--tab-labeled-arrow:" | append: section.settings.tab_labeled_arrow.rgb |  append: ';' -%}
  {%- endif -%}

  <slideshow-carousel-hotspots id="{{ slideshow_id }}" style="{{ tab_overlay_css_vars }}" class="slideshow__carousel" reveal-on-scroll="true" selector=".slideshow__slide" transition="{{ section.settings.transition_type }}" {% if section.settings.autoplay %}autoplay="{{ section.settings.cycle_speed }}"{% endif %} role="region">
    {% if section.settings.transition_type == 'video_transition' %}
      <div class="slideshow__video-background {% unless section.settings.full_width %}rounded{% endunless %}" data-video-background>
        {%- if section.settings.mobile_transition_video != blank -%}
          <video-media class="sm:hidden" {% if section.settings.image_size == 'auto' %}style="--aspect-ratio: {{ section.settings.mobile_transition_video.aspect_ratio }}"{% endif %}>
            {{- section.settings.mobile_transition_video | video_tag: class: 'object-cover sm:hidden', controls: false, playsinline: true, muted: true, loop: true, preload: 'metadata' -}}
          </video-media>
        {%- endif -%}

        <video-media {% if section.settings.mobile_transition_video != blank %}class="hidden sm:block"{% endif %} {% if section.settings.image_size == 'auto' %}style="--aspect-ratio: {{ section.settings.transition_video.aspect_ratio }}"{% endif %}>
          {{- section.settings.transition_video | video_tag: playsinline: true, preload: 'metadata', muted: true, loop: true, controls: false -}}
        </video-media>
      </div>
    {% endif %}

    {%- for block in section.blocks -%}
      {%- assign tab_labels = tab_labels | append: block.settings.tab_label |  append: ',' -%}
      {%- capture slide -%}
        {%- assign overlay_opacity = block.settings.overlay_opacity | divided_by: 100.0 -%}
        {%- assign styles = '--content-over-media-content-max-width:' | append: block.settings.content_max_width | append: 'rem;' -%}
        {%- assign styles = styles | append: '--content-over-media-content-max-width-mobile:' | append: block.settings.content_max_width_mobile | append: '%;' -%}
        {%- assign styles = styles | append: '--content-over-media-overlay:' | append: block.settings.overlay_color.rgb | append: '/' | append: overlay_opacity | append: ';' -%}
        {% if block.settings.gap-row-mobile != 0 %}
          {% assign styles = styles | append: '--gap-row-mobile:' | append: block.settings.gap-row-mobile | append: 'rem;' %}
        {% endif %}
        <div class="content-over-media content-over-media--{{ section.settings.image_size }} {% unless section.settings.full_width %}rounded{% endunless %}" style="{{ styles }}">
          {%- comment -%}---------------- MEDIA ----------------{%- endcomment -%}
          {%- capture sizes -%}{% if section.settings.full_width %}100vw{% else %}min({{ settings.page_width }}px, 100vw){% endif %}{%- endcapture -%}

          {%- if block.settings.image != blank -%}
            {%- capture loading_strategy -%}{% if forloop.first %}eager{% else %}lazy{% endif %}{%- endcapture -%}
            {%- capture fetch_priority -%}{% if forloop.first %}high{% else %}low{% endif %}{%- endcapture -%}

            {%- if block.settings.mobile_image == blank -%}
              {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: loading_strategy, fetchpriority: fetch_priority, sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200' -}}
            {%- else -%}
              {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: loading_strategy, fetchpriority: fetch_priority, sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'hidden sm:block' -}}
              {{- block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag: loading: loading_strategy, fetchpriority: fetch_priority, sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'sm:hidden' -}}
            {%- endif -%}
          {%- else -%}
            {%- capture placeholder_image -%}{% cycle 'placeholder': 'lifestyle-1', 'lifestyle-2' %}{%- endcapture -%}
            {{- placeholder_image | placeholder_svg_tag: 'placeholder' | replace: '<svg', '<svg preserveAspectRatio="xMinYMin slice"' -}}
          {%- endif -%}

          {%- comment -%}---------------- CONTENT ----------------{%- endcomment -%}
          {%- capture content_class -%}{{ block.settings.mobile_text_position }} {{ block.settings.desktop_text_position }}{%- endcapture -%}

          <div {% render 'surface', class: content_class, text_color: block.settings.text_color %}>
            <div class="prose slideshow-prose">
              {%- if block.settings.subheading != blank -%}
                <p class="{{ block.settings.subheading_class }} subheading-fa" data-sequence="subheading">{{ block.settings.subheading | escape }}</p>
              {%- endif -%}

              {%- if block.settings.title != blank -%}
                <p class="{{ block.settings.heading_tag }} title-fa" data-sequence="heading">
                  {%- render 'styled-text', content: block.settings.title, apparition_effect: true -%}
                </p>
              {%- endif -%}

              {%- if block.settings.content != blank -%}
                <div class="{{ block.settings.content_class }} content-fa" data-sequence="content">
                  {{- block.settings.content -}}
                </div>
              {%- endif -%}

            </div>
          </div>

          {%- for i in (1 .. 5) -%}
            {% liquid
              assign hot_spot_style = 'small'
              assign title = 'title_' | append: i
              assign content = 'content_' | append: i
              assign media = 'media_' | append: i
              assign position_horz = 'horizontal_position_' | append: i
              assign position_horz_mobile = 'horizontal_position_mobile_' | append: i
              assign label_position = 'label_position_' | append: i
              assign label_position_mobile = 'label_position_mobile_' | append: i
              assign label_position_vertical = 'label_position_v_' | append: i
              assign label_position_vertical_mobile = 'label_position_mv_' | append: i
              assign hot_spot_class = 'hot-spot hot-spot--' | append: hot_spot_style | append: ' '

              if block.settings[label_position_vertical] == 'top' and  block.settings[label_position] == 'default'
                  assign lpv_class = 'label-vertical-top'
              elsif block.settings[label_position_vertical] == 'top' and  block.settings[label_position] == 'start'
                  assign lpv_class = 'label-vertical-top-left'
              elsif block.settings[label_position_vertical] == 'top' and  block.settings[label_position] == 'end'
                  assign lpv_class = 'label-vertical-top-right'
              elsif block.settings[label_position_vertical] == 'bottom'  and block.settings[label_position] == 'default'
                  assign lpv_class = 'label-vertical-bottom'
              elsif block.settings[label_position_vertical] == 'bottom'  and block.settings[label_position] == 'start'
                  assign lpv_class = 'label-vertical-bottom-left'
              elsif block.settings[label_position_vertical] == 'bottom'  and block.settings[label_position] == 'end'
                  assign lpv_class = 'label-vertical-bottom-right'
              else 
                assign lpv_class = ''
              endif

              if block.settings[label_position_vertical_mobile] == 'top' and  block.settings[label_position_mobile] == 'default'
                  assign lpvm_class = 'label-vertical-mobile-top'
              elsif block.settings[label_position_vertical_mobile] == 'top' and block.settings[label_position_mobile] == 'start'
                  assign lpvm_class = 'label-vertical-mobile-top-left'
              elsif block.settings[label_position_vertical_mobile] == 'top' and block.settings[label_position_mobile] == 'end'
                  assign lpvm_class = 'label-vertical-mobile-top-right'
              elsif block.settings[label_position_vertical_mobile] == 'bottom' and block.settings[label_position_mobile] == 'default'
                  assign lpvm_class = 'label-vertical-mobile-bottom'
              elsif block.settings[label_position_vertical_mobile] == 'bottom' and block.settings[label_position_mobile] == 'start'
                  assign lpvm_class = 'label-vertical-mobile-bottom-left'
              elsif block.settings[label_position_vertical_mobile] == 'bottom' and block.settings[label_position_mobile] == 'end'
                  assign lpvm_class = 'label-vertical-mobile-bottom-right'
              else
                 assign lpvm_class = ''
              endif
                 
              if block.settings[title] == blank or block.settings[content] == blank
                continue
              endif
              
              if section.settings.hot_spot_animation
                assign hot_spot_class = hot_spot_class | append: 'hot-spot--static '
              endif

              if section.settings.hot_spot_animation
                assign hot_spot_class = hot_spot_class | append: 'hot-spot--static '
              endif

              if block.settings[label_position_mobile] == 'default'
                if block.settings[position_horz_mobile] < 50
                  assign hot_spot_class = hot_spot_class | append: 'label-position--mobile-end '
                else
                  assign hot_spot_class = hot_spot_class | append: 'label-position--mobile-start '
                endif
              else
                assign hot_spot_class = hot_spot_class | append: 'label-position--mobile-' | append: block.settings[label_position_mobile] | append: ' '
              endif

              if block.settings[label_position] == 'default'
                if block.settings[position_horz] < 50
                  assign hot_spot_class = hot_spot_class | append: 'label-position--end '
                else
                  assign hot_spot_class = hot_spot_class | append: 'label-position--start '
                endif
              else
                assign hot_spot_class = hot_spot_class | append: 'label-position--' | append: block.settings[label_position] | append: ' '
              endif
            %}
            
            <div id="block-{{ section.id }}-{{ block.id }}-{{ i }}" class="{{ hot_spot_class  }}">
              {%- capture popover_id -%}popover-{{ block.id }}-{{ i }}{%- endcapture -%}

              <button type="button" aria-controls="{{ popover_id }}" aria-expanded="false" class="hot-spot__dot tap-area">
                <span class="sr-only">{{ 'general.accessibility.read_more' | t }}</span>
                {% if hot_spot_style == 'default' %}
                  {%- render 'icon' with 'plus', width: 8, height: 8 -%}
                {% endif %}
              </button>

              <button type="button" aria-controls="{{ popover_id }}" aria-expanded="false" class="hot-spot__label text-sm rounded-sm {{ lpv_class }} {{ lpvm_class }}"><span>{{ block.settings[title] | escape }}</span></button>

              <x-drawer id="{{ popover_id }}" class="drawer modal-window" open-from="bottom" template="modal">
                {%- assign half_width = settings.page_width |  divided_by: 2 -%}
                {%- assign sizes = '(max-width: 699px) 100vw, ' | append: half_width | append: 'px' -%}
                {%- assign widths = '200,300,400,500,' | append: half_width | append: ',' | append: settings.page_width -%}
                {%- if block.settings[media] != blank -%}
                <div slot="media">
                  {{- block.settings[media] | image_url: width: block.settings[media].width | image_tag: loading: 'eager', widths: widths, sizes: sizes -}}
                </div>
                {%- endif -%}
                {%- if block.settings[title] != blank -%}
                  <span slot="header">{{ block.settings[title] | escape }}</span>
                {%- endif -%}
                {{- block.settings[content] -}}
              </x-drawer>
            </div>
          {%- endfor -%}
        </div>
      {%- endcapture -%}
      {%- liquid
        if section.settings.transition_type == 'video_transition'
          assign transition_data = 'data-play-start="' | append: block.settings.video_start | append: '" data-play-end="' | append: block.settings.video_end | append: '" '
        endif
      -%}

      <div id="block-{{ block.id }}" {{ transition_data }} class="slideshow__slide {% if forloop.first %}is-selected{% endif %}" role="group" {{ block.shopify_attributes }}>
        {{- slide -}}
      </div>
    {%- endfor -%}

    {%- if section.blocks.size > 1 -%}
      {%- assign classes = 'slideshow__controls ' -%}
      {%- if section.blocks.size > 3 -%}
        {%- assign classes = classes | append: 'slideshow__controls--compact' -%}
      {%- endif -%}
      <div class="{{ classes }}">
        {%- assign tab_labels = tab_labels | remove_last: ',' | split: ',' -%}

        <page-dots class="tab-labels" aria-controls="{{ slideshow_id }}">
          {%- for i in (1..section.blocks.size) -%}
            <button type="button" class="tab-label text-nav-link" aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
              <span class="tab-location text-sm">{{ i }}/{{ forloop.length  }}</span>
              <span>{{ tab_labels[forloop.index0] }}</span>
            </button>
          {%- endfor -%}
        </page-dots>

      </div>

      <button is="prev-button" aria-controls="{{ slideshow_id }}" class="tab-arrow-controls circle-button circle-button--sm circle-button--fill group">
        <span class="sr-only">{{ 'general.accessibility.previous' | t }}</span>
        <span class="animated-arrow animated-arrow-v2 animated-arrow--reverse"></span>
      </button>

      <button is="next-button" aria-controls="{{ slideshow_id }}" class="tab-arrow-controls circle-button circle-button--sm circle-button--fill group">
        <span class="sr-only">{{ 'general.accessibility.next' | t }}</span>
        <span class="animated-arrow animated-arrow-v2"></span>
      </button>

    {%- endif -%}
  </slideshow-carousel-hotspots>
</x-slideshow>

{% schema %}
